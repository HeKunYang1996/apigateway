# API网关环境变量配置示例
# 复制此文件为 .env 并修改相应的值

# 应用设置
APP_NAME=API网关
APP_VERSION=1.0.0
DEBUG=false

# 服务器设置
HOST=0.0.0.0
PORT=6005

# Redis设置 - 测试环境
REDIS_HOST=192.168.30.62
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_PREFIX=apigateway:

# JWT设置
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# WebSocket设置
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS=1000

# 数据调度设置
DATA_FETCH_INTERVAL=5
DATA_BATCH_SIZE=100

# 日志设置
LOG_LEVEL=INFO
LOG_FILE=logs/apigateway.log

# 安全设置
CORS_ORIGINS=["*"]
RATE_LIMIT_PER_MINUTE=100
